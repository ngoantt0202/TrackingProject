@model TaskTracking.Models.GroupViewModels

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_1.cshtml";
}

<div>
    <div>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td colspan="4"><h4>GROUP DETAIL</h4></td>
                </tr>
                <tr>
                    <td  class="success">Group</td>
                    <td>
                        <h5> #@Html.DisplayFor(model => model.GroupId)</h5>
                    </td>
                    <td class="success">@Html.DisplayNameFor(model => model.GroupName)</td>
                    <td>@Html.DisplayFor(model => model.GroupName)</td>
                </tr>
                <tr>
                    <td class="success">@Html.DisplayNameFor(model => model.GroupType)</td>
                    <td>@Html.DisplayFor(model => model.GroupType)</td>
                    <td class="success">@Html.DisplayNameFor(model => model.Members)</td>
                    <td>@Html.DisplayFor(model => model.Members)</td>
                </tr>
                <tr>
                    <td class="success">@Html.DisplayNameFor(model => model.Description)</td>
                    <td colspan="3">@Html.DisplayFor(model => model.Description)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        <table class="table table-bordered">
            <tr>
                <th colspan="6">
                    <h4>LIST MEMBER</h4>
                </th>
            </tr>
            <tr class="success">
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberLst.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberLst.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberLst.FirstOrDefault().Status)
                </th>
            </tr>

            @foreach (var item in Model.MemberLst)
            {
                <tr>
                    <td>
                        #@Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>